{
  "name": "The Pure Offline Chrome Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Offline Usage of Web-pages",
  "icons": { 
      "16": "icon.png",
      "48": "icon48.png",
      "128": "icon128.png" 
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": ["extension.css"],
      "js": ["jquery.min.js", "inject.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title":"Save your pages offline"
  },
  "minimum_chrome_version": "14.0.835.202",
  "permissions": [
    "tabs","storage","unlimitedStorage","http://*/*", "https://*/*"
  ]

}
