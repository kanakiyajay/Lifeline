{
  "name": "The Pure Offline Chrome Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Offline Usage of Web-pages",
  //3 Icon Sizes
  /*"icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" 
  },*/
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": ["extension.css"],
      "js": ["jquery.min.js", "inject.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title":"Why isnt this working?"
  },
  "minimum_chrome_version": "14.0.835.202",
  "permissions": [
    "history","tabs","storage","topSites","unlimitedStorage","http://*/*", "https://*/*","webNavigation","management"
  ]

}
